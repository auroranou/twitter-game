<div class='container'>
  <button id='start'>Start!</button>
  <%= render 'quiz' %>
  <div class="scoreboardBox">
    <ul class='scoreboard'>
      <% @users.each do |u| %>
      <li>
        <p><%= u.email %></p>
        <p>Score: <%= u.score %></p>
        <div class="bar-wrap"><span class="bar-fill" style="width: <%= (u.score.to_f / @topscore.score) * 100 %>%;"></span></div>
      </li>
    <% end %>
    </ul>
  </div>
</div>


<% if current_user %>
  <p class='user' id='<%= current_user.id %>'></p>
<% end %>

<script type="text/javascript">
$('#start').on('click', function(event){
	event.preventDefault();
	$(this).hide();
	$('.quiz').show();
});

$('#quit').on('click', function(event){
	event.preventDefault();
	$('#start').show();
	$('.quiz').hide();
})
</script>